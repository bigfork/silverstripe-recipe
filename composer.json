{
	"name": "bigfork/silverstripe-recipe",
	"type": "silverstripe-recipe",
	"description": "Bigforkâ€™s SilverStripe CMS recipe",
	"homepage": "https://www.bigfork.co.uk",
	"license": "BSD-3-Clause",
	"require": {
		"php": ">=7.0.0",
		"silverstripe/recipe-plugin": "^1",
		"silverstripe/cms": "4.x-dev",
		"silverstripe/framework": "4.x-dev",
		"bigfork/htmleditorsrcset": "^2",
		"feejin/silverstripe-securitytemplates": "^2",
		"heyday/silverstripe-responsive-images": "^2",
